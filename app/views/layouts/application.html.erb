<!DOCTYPE html>
<html>
  <head>
    <title>Catálogo de Filmes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-800">
    <nav class="bg-blue-600 text-white shadow-lg">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <div class="text-2xl font-bold">
      <%= link_to 'CatálogoFilmes', root_path, class: 'hover:text-blue-200' %>
    </div>
    
    <div class="flex gap-4 items-center">
      <%= link_to 'Filmes', movies_path, class: 'hover:text-blue-200' %>

      <%= form_with url: movies_path, method: :get, local: true, class: "flex items-center gap-2" do %>
  <%= text_field_tag :search, params[:search], placeholder: "Buscar por título...", class: "rounded-md px-3 py-1 text-gray-700 focus:ring-1 focus:ring-blue-400 focus:border-blue-400" %>
  <%= submit_tag "OK", class: "bg-white text-blue-600 px-3 py-1 rounded hover:bg-gray-100 transition-colors duration-200 text-sm" %>
<% end %>


      <% if user_signed_in? %>
        <%= link_to 'Meus Filmes', dashboard_movies_path, class: 'hover:text-blue-200' %>
        <%= link_to 'Perfil', edit_dashboard_profile_path, class: 'hover:text-blue-200' %>
        <%= button_to 'Sair', destroy_user_session_path, method: :delete, class: 'hover:text-blue-200' %>
      <% else %>
        <%= link_to 'Entrar', new_user_session_path, class: 'hover:text-blue-200' %>
        <%= link_to 'Cadastrar', new_user_registration_path, class: 'bg-white text-blue-600 px-4 py-2 rounded hover:bg-blue-100' %>
      <% end %>
    </div>
  </div>

  <div class="absolute top-4 right-6">
  <div class="flex items-center space-x-1 bg-gray-200 rounded-full p-1 w-28">
    <div class="bg-white w-12 h-6 rounded-full shadow-md transform transition-transform duration-300"
         style="transform: translateX(<%= I18n.locale == :en ? '100%' : '0%' %>);">
    </div>

    <%= link_to "PT", url_for(locale: :'pt-BR'),
                class: "absolute w-1/2 h-6 left-0 top-0 text-xs font-bold flex items-center justify-center cursor-pointer #{I18n.locale == :'pt-BR' ? 'text-blue-600' : 'text-gray-600'}" %>

    <%= link_to "EN", url_for(locale: :en),
                class: "absolute w-1/2 h-6 right-0 top-0 text-xs font-bold flex items-center justify-center cursor-pointer #{I18n.locale == :en ? 'text-blue-600' : 'text-gray-600'}" %>
  </div>
</div>

</nav>
    
    <% if notice %>
      <div class="container mx-auto px-4 mt-4">
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
          <%= notice %>
        </div>
      </div>
    <% end %>
    
    <% if alert %>
      <div class="container mx-auto px-4 mt-4">
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
          <%= alert %>
        </div>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>