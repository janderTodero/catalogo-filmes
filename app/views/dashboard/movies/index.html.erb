<div class="container mx-auto px-6 py-10 space-y-10">
  <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
    <h1 class="text-4xl font-bold text-white"><%= t('dashboard.my_movies') %></h1>
    <%= link_to t('dashboard.new_movie'), new_dashboard_movie_path,
                class: "bg-red-500 hover:bg-red-600 text-white px-6 py-2 rounded-lg shadow transition duration-200 cursor-pointer" %>
  </div>

  <div class="bg-gray-800 shadow-md rounded-lg p-6 text-white">
    <h2 class="text-2xl font-semibold mb-4 text-red-500"><%= t('dashboard.registered_movies') %></h2>

    <% if @movies.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-700">
          <thead class="bg-gray-700">
            <tr>
              <th class="px-4 py-2 text-left text-sm font-medium text-gray-300"><%= t('dashboard.title') %></th>
              <th class="px-4 py-2 text-left text-sm font-medium text-gray-300"><%= t('dashboard.release_year') %></th>
              <th class="px-4 py-2 text-left text-sm font-medium text-gray-300"><%= t('dashboard.director') %></th>
              <th class="px-4 py-2 text-left text-sm font-medium text-gray-300"><%= t('dashboard.actions') %></th>
            </tr>
          </thead>
          <tbody class="bg-gray-900 divide-y divide-gray-700">
            <% @movies.each do |movie| %>
              <tr>
                <td class="px-4 py-2"><%= movie.title %></td>
                <td class="px-4 py-2"><%= movie.release_year %></td>
                <td class="px-4 py-2"><%= movie.director %></td>
                <td class="px-4 py-2 flex gap-2">
                  <%= link_to t('dashboard.edit'), edit_dashboard_movie_path(movie),
                      class: "bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded-lg text-sm cursor-pointer" %>
                  <%= button_to t('dashboard.delete'), dashboard_movie_path(movie),
                      method: :delete,
                      data: { turbo_confirm: t('dashboard.confirm_delete') },
                      class: "bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded-lg text-sm cursor-pointer" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="mt-6 flex justify-center">
        <%= paginate @movies, theme: 'tailwind' %>
      </div>

    <% else %>
      <p class="text-gray-400"><%= t('dashboard.no_movies_found') %></p>
    <% end %>
  </div>
</div>
