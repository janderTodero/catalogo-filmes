<div class="container mx-auto px-6 py-10 bg-gray-900 min-h-screen text-white">
  <div class="bg-gray-800 shadow-md rounded-lg p-8 max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold text-red-500 mb-8"><%= t('profile.edit_profile') %></h1>

    <%= form_with model: @user, url: dashboard_profile_path, method: :patch, class: 'space-y-8' do |f| %>
      
      <% if @user.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
          <ul class="list-disc list-inside text-red-800">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Seção: Informações do Perfil -->
      <div class="space-y-4">
        <h2 class="text-xl font-semibold text-gray-300 mb-2"><%= t('profile.personal_info') %></h2>

        <div>
          <%= f.label :name, t('profile.name'), class: 'block text-gray-300 mb-2 font-medium' %>
          <%= f.text_field :name, placeholder: t('profile.name_placeholder'), class: 'w-full border border-gray-600 rounded px-3 py-2 bg-gray-900 text-white focus:outline-none focus:ring-1 focus:ring-red-500 focus:border-red-500' %>
        </div>

        <div>
          <%= f.label :email, t('profile.email'), class: 'block text-gray-300 mb-2 font-medium' %>
          <%= f.email_field :email, placeholder: t('profile.email_placeholder'), class: 'w-full border border-gray-600 rounded px-3 py-2 bg-gray-900 text-white focus:outline-none focus:ring-1 focus:ring-red-500 focus:border-red-500' %>
        </div>
      </div>

      <hr class="border-gray-700 my-6">

      <!-- Seção: Alterar Senha -->
      <div class="space-y-4">
        <h2 class="text-xl font-semibold text-gray-300 mb-2"><%= t('profile.change_password') %></h2>
        <p class="text-gray-400 text-sm"><%= t('profile.leave_blank_if_no_change') %></p>

        <div>
          <%= f.label :password, t('profile.new_password'), class: 'block text-gray-300 mb-2 font-medium' %>
          <%= f.password_field :password, autocomplete: 'new-password', placeholder: t('profile.new_password_placeholder'), class: 'w-full border border-gray-600 rounded px-3 py-2 bg-gray-900 text-white focus:outline-none focus:ring-1 focus:ring-red-500 focus:border-red-500' %>
        </div>

        <div>
          <%= f.label :password_confirmation, t('profile.password_confirmation'), class: 'block text-gray-300 mb-2 font-medium' %>
          <%= f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: t('profile.password_confirmation_placeholder'), class: 'w-full border border-gray-600 rounded px-3 py-2 bg-gray-900 text-white focus:outline-none focus:ring-1 focus:ring-red-500 focus:border-red-500' %>
        </div>
      </div>

      <div class="flex gap-4 mt-6">
        <%= f.submit t('profile.update_profile'), class: 'bg-red-500 hover:bg-red-600 text-white px-6 py-2 rounded transition cursor-pointer' %>
        <%= link_to t('profile.cancel'), root_path, class: 'bg-gray-700 hover:bg-gray-600 text-gray-200 px-6 py-2 rounded transition cursor-pointer text-center' %>
      </div>
    <% end %>
  </div>
</div>
