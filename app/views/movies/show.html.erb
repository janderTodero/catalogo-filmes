<div class="container mx-auto px-4 py-12 bg-gray-900 text-white min-h-screen">
  <!-- Conteúdo principal -->
  <div class="flex flex-col lg:flex-row gap-8 mb-12 items-center lg:items-start">
    
    <!-- Capa do filme -->
    <div class="flex-shrink-0 w-full lg:w-1/3 flex justify-center lg:justify-start">
      <% if @movie.cover_image.attached? %>
        <%= image_tag @movie.cover_image.variant(resize_to_limit: [400, 600]), class: "rounded shadow-lg w-full" %>
      <% else %>
        <div class="w-full h-[600px] bg-gray-700 flex items-center justify-center rounded shadow-lg">
          <span class="text-gray-400 text-lg"><%= t('movies.no_image') %></span>
        </div>
      <% end %>
    </div>

    <!-- Informações do filme -->
    <div class="flex-1 flex flex-col justify-center">
      <h1 class="text-4xl font-bold mb-4 text-red-500"><%= @movie.title %></h1>

      <div class="text-gray-300 mb-4 space-x-2">
        <span><%= @movie.release_year %></span>•
        <span><%= @movie.duration %> <%= t('movies.duration_minutes') %></span>•
        <span><%= t('movies.director') %>: <%= @movie.director %></span>
      </div>

      <% if @movie.categories.any? %>
        <div class="mb-4">
          <h3 class="text-lg font-semibold text-gray-200 mb-2"><%= t('movies.categories') %></h3>
          <div class="flex flex-wrap gap-2">
            <% @movie.categories.each do |category| %>
              <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-sm font-medium">
                <%= category.name %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @movie.tag_list.any? %>
        <div class="mb-4">
          <h3 class="text-lg font-semibold text-gray-200 mb-2"><%= t('movies.tags') %></h3>
          <div class="flex flex-wrap gap-2">
            <% @movie.tag_list.each do |tag| %>
              <span class="bg-gray-700 text-gray-300 px-2 py-1 rounded-full text-xs font-medium">
                <%= tag %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>

      <p class="text-gray-300 mb-6"><%= @movie.synopsis %></p>
      
      <%= link_to t('movies.back'), movies_path, class: 'text-red-500 hover:underline font-semibold cursor-pointer' %>
    </div>
  </div>

  <div class="bg-gray-800 rounded-lg shadow-md p-8">
    <h2 class="text-2xl font-bold mb-6 text-red-500"><%= t('movies.comments') %> (<%= @comments.count %>) </h2>

    <!-- Formulário de comentário -->
    <%= form_with model: [@movie, @comment], class: 'mb-8' do |f| %>
      <div class="mb-4">
        <%= f.label :author_name, t('comments.your_name'), class: 'block text-gray-300 mb-2' %>
        <%= f.text_field :author_name, value: (current_user&.name || ''), readonly: user_signed_in?, 
              class: 'w-full border border-gray-600 rounded px-3 py-2 bg-gray-900 text-white focus:outline-none focus:ring-1 focus:ring-red-500' %>
      </div>
      
      <div class="mb-4">
        <%= f.label :content, t('comments.content'), class: 'block text-gray-300 mb-2' %>
        <%= f.text_area :content, rows: 4, class: 'w-full border border-gray-600 rounded px-3 py-2 bg-gray-900 text-white focus:outline-none focus:ring-1 focus:ring-red-500' %>
      </div>
      
      <%= f.submit t('comments.submit'), class: 'bg-red-500 text-white px-6 py-2 rounded hover:bg-red-600 transition-colors duration-200 cursor-pointer' %>
    <% end %>

    <div class="space-y-4">
      <% @comments.each do |comment| %>
        <div class="border-l-4 border-red-500 pl-4 py-3 bg-gray-700 rounded">
          <div class="flex justify-between items-center">
            <div class="font-semibold text-white"><%= comment.author_name %></div>
            <div class="flex items-center gap-2">
              <span class="text-gray-400 text-sm"><%= time_ago_in_words(comment.created_at) %> <%= t('comments.ago') %></span>

              <% if user_signed_in? && comment.user == current_user %>
                <div class="flex">
                  <%= button_to t('comments.destroy'), movie_comment_path(@movie, comment),
                      method: :delete,
                      data: { confirm: t('comments.confirm_destroy') },
                      class: "bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 cursor-pointer text-sm mx-2" %>
                </div>
              <% end %>
            </div>
          </div>
          <p class="text-gray-200 mt-2"><%= comment.content %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
