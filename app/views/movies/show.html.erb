<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow-md p-8 mb-8">
    <h1 class="text-4xl font-bold mb-4"><%= @movie.title %></h1>

    <div class="text-gray-600 mb-4">
      <span><%= @movie.release_year %></span> • 
      <span><%= @movie.duration %> minutos</span> • 
      <span>Diretor: <%= @movie.director %></span>
    </div>
    

    <% if @movie.categories.any? %>
      <div class="mb-4">
        <h3 class="text-lg font-semibold text-gray-800 mb-2">Categorias</h3>
        <div class="flex flex-wrap gap-2">
          <% @movie.categories.each do |category| %>
            <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-sm font-medium">
              <%= category.name %>
            </span>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @movie.tag_list.any? %>
  <div class="flex flex-wrap gap-2 mb-4">
    <% @movie.tag_list.each do |tag| %>
      <span class="bg-gray-200 text-gray-800 px-2 py-1 rounded-full text-xs font-medium">
        <%= tag %>
      </span>
    <% end %>
  </div>
<% end %>

    <p class="text-gray-800 mb-4"><%= @movie.synopsis %></p>

    <%= link_to 'Voltar', movies_path, class: 'text-blue-600 hover:underline' %>
  </div>
  
  <div class="bg-white rounded-lg shadow-md p-8">
    <h2 class="text-2xl font-bold mb-4">Comentários</h2>
    
    <%= form_with model: [@movie, @comment], class: 'mb-8' do |f| %>
      <div class="mb-4">
        <%= f.label :author_name, 'Seu nome', class: 'block text-gray-700 mb-2' %>
        <%= f.text_field :author_name, value: (current_user&.name || ''), readonly: user_signed_in?, class: 'w-full border rounded px-3 py-2' %>
      </div>
      
      <div class="mb-4">
        <%= f.label :content, 'Comentário', class: 'block text-gray-700 mb-2' %>
        <%= f.text_area :content, rows: 4, class: 'w-full border rounded px-3 py-2' %>
      </div>
      
      <%= f.submit 'Adicionar comentário', class: 'bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700' %>
    <% end %>
    
    <div class="space-y-4">
      <% @comments.each do |comment| %>
        <div class="border-l-4 border-blue-600 pl-4 py-2">
          <div class="font-semibold text-gray-800"><%= comment.author_name %></div>
          <div class="text-gray-600 text-sm"><%= time_ago_in_words(comment.created_at) %> atrás</div>
          <p class="text-gray-700 mt-2"><%= comment.content %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
