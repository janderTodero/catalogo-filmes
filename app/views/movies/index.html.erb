<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold mb-8">Catálogo de Filmes</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @movies.each do |movie| %>
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-semibold mb-2"><%= movie.title %></h2>
        <p class="text-gray-600 mb-2"><%= movie.release_year %> • <%= movie.duration %> min</p>
        <p class="text-gray-700 mb-4"><%= truncate(movie.synopsis, length: 150) %></p>
        <%= link_to 'Ver detalhes', movie_path(movie), class: 'text-blue-600 hover:underline' %>
      </div>
    <% end %>
  </div>
  
  <div class="mt-8">
    <%= paginate @movies %>
  </div>
</div>