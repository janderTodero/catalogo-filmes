<div class="container mx-auto px-4 py-12 bg-gray-50 min-h-screen">
  <h1 class="text-4xl md:text-5xl font-extrabold mb-12 text-center text-gray-800">
    Catálogo de Filmes
  </h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @movies.each do |movie| %>
      <div class="relative group bg-white rounded-xl shadow-lg overflow-hidden transition-shadow duration-300 hover:shadow-2xl h-80">

        <!-- Conteúdo do card -->
        <div class="p-6 flex flex-col justify-end h-full">
          <h2 class="text-2xl font-semibold mb-2 text-gray-800"><%= movie.title %></h2>
          <p class="text-gray-500 mb-2"><%= movie.release_year %> • <%= movie.duration %> min</p>
          <p class="text-gray-700 mb-4"><%= truncate(movie.synopsis, length: 100) %></p>
          <%= link_to 'Ver detalhes', movie_path(movie), class: 'text-blue-600 font-medium hover:text-blue-800 hover:underline' %>
        </div>

        <!-- Hover overlay -->
        <div class="absolute inset-0 bg-black bg-opacity-70 text-white p-6 flex flex-col justify-center items-start opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          <h2 class="text-xl font-bold mb-2"><%= movie.title %></h2>
          <p class="text-sm mb-4"><%= movie.synopsis %></p>
          <%= link_to 'Ver detalhes', movie_path(movie), class: 'bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700' %>
        </div>

      </div>
    <% end %>
  </div>

  <!-- Paginação -->
  <div class="mt-12 flex justify-center">
    <%= paginate @movies %>
  </div>
</div>
