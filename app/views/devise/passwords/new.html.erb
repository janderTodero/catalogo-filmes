<div class="relative min-h-screen flex items-center justify-center bg-gray-900 bg-opacity-60">
  <div class="bg-gray-800 bg-opacity-90 p-8 rounded-2xl shadow-2xl w-full max-w-md text-white">
    <h2 class="text-3xl font-bold mb-4 text-center">
      <%= t('devise.passwords.new.title') %>
    </h2>

    <p class="text-gray-400 text-center mb-6">
      <%= t('devise.passwords.new.instruction') %>
    </p>

    <% if notice.present? %>
      <div class="bg-green-600 bg-opacity-20 border border-green-500 text-green-400 px-4 py-3 rounded mb-4 text-center">
        <%= notice %>
      </div>
    <% elsif alert.present? %>
      <div class="bg-red-600 bg-opacity-20 border border-red-500 text-red-400 px-4 py-3 rounded mb-4 text-center">
        <%= alert %>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, t('devise.passwords.new.email'), class: "block text-gray-300 font-medium mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full border border-gray-600 rounded px-3 py-2 bg-gray-800 text-white 
                      focus:outline-none focus:ring-2 focus:ring-red-500" %>
      </div>

      <div class="flex justify-center">
        <%= f.submit t('devise.passwords.new.submit'),
              class: "bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-lg 
                       transition-colors duration-200 font-semibold" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-gray-400">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
