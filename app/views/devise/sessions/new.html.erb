<div class="min-h-screen flex items-center justify-center bg-gray-900 px-4">
  <div class="w-full max-w-md bg-gray-800 shadow-lg rounded-xl p-8">
    <h2 class="text-3xl font-bold text-center text-red-500 mb-8"><%= t('devise.sessions.title', default: 'Entrar na conta') %></h2>

    <% if notice.present? %>
  <div class="bg-green-600 bg-opacity-20 border border-green-500 text-green-400 px-4 py-3 rounded mb-4 text-center">
    <%= notice %>
  </div>
<% elsif alert.present? %>
  <div class="bg-red-600 bg-opacity-20 border border-red-500 text-red-400 px-4 py-3 rounded mb-4 text-center">
    <%= alert %>
  </div>
<% end %>


    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>

      <div>
        <%= f.label :email, t('devise.sessions.email', default: 'Email'), class: 'block text-gray-300 font-medium mb-2' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: 'w-full border border-gray-700 rounded px-3 py-2 bg-gray-900 text-white focus:ring-1 focus:ring-red-500 focus:border-red-500' %>
      </div>

      <div>
        <%= f.label :password, t('devise.sessions.password', default: 'Senha'), class: 'block text-gray-300 font-medium mb-2' %>
        <%= f.password_field :password, autocomplete: "current-password",
            class: 'w-full border border-gray-700 rounded px-3 py-2 bg-gray-900 text-white focus:ring-1 focus:ring-red-500 focus:border-red-500' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-2">
          <%= f.check_box :remember_me, class: 'h-4 w-4 text-red-500 focus:ring-red-500 border-gray-700 rounded' %>
          <%= f.label :remember_me, t('devise.sessions.remember_me', default: 'Lembrar-me'), class: 'text-gray-300' %>
        </div>
      <% end %>

      <div>
        <%= f.submit t('devise.sessions.submit', default: 'Entrar'),
            class: 'w-full bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded transition duration-200 cursor-pointer' %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-gray-400">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
